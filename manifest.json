{
  "manifest_version": 3,
  "name": "Voice & Text Search Pro",
  "version": "2.2",
  "description": "Search using text or voice with instant results and TTS feedback.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "audioCapture"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "assets/logo.png"
    }
  },
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["scripts/content.js"],
    "css": ["styles/content.css"]
  }
],
  "icons": {
    "128": "assets/logo.png"
  },
  "web_accessible_resources": [
    {
    "resources": ["styles/content.css"],
    "matches": ["<all_urls>"]
  }
]
}