{
  "manifest_version": 3,
  "name": "Keyword Search",
  "version": "1.0",
  "description": "Advanced keyword search extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content.css"
      ]
    }
  ],
  "icons": {
    "128": "/assets/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}